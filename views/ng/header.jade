.navbar.navbar-custom.navbar-default.navbar-fixed-top(role="navigation")
  .container-fluid
    .navbar-header
      .row
        .col-sm-4
          span.navbar-brand
            span.muted.hidden-sm.hidden-xs API for
            | &nbsp;
            span.api-name #{apiInfo().name}

        .col-sm-2
          ul.nav.navbar-nav
            li.active
              a(href="#")
                | API version &nbsp;
                span.badge {{apiInfo.apiVersion}}
        .col-sm-6(ng-controller="AuthCtrl")
          form.navbar-form.navbar-right
            .form-group
              .input-group
                span.input-group-addon
                  span(ng-show="auth.username") Logged in as {{auth.username}}
                  span(ng-hide="auth.username") Not logged in
                input.form-control(ng-hide="auth.username", type="text", ng-model="auth.token", placeholder="API token")
                span.input-group-btn(ng-if="auth.username")
                  button.btn.btn-default(ng-click="auth.token = null") Log Out

